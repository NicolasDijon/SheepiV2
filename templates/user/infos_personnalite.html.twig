{% extends 'base.html.twig' %}

{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('css/registration.css') }}">
{% endblock %}

{% block title %}Personnalité de {{ app.user.userName }}{% endblock %}

{% block body %}

{# Sidenav desktop #}
{% if app.user %}
{% include('user/sidenav_user.html.twig') %}
{% endif %}

<div class="main" style="background-color: #f1edf6">
    <div class="container-fluid">
        <div class="row justify-content-center logo_mobile mt-4"  style="background-color: white">
            <a href="{{ path('home') }}"><img src="{{ asset('img/picto/logo_sheepi.png') }}" class="nav_logo" alt="Logo Sheepi" width="100px"></a>
        </div>
        {# Bloc titre #}
        <div class="row" style="background-color: white">
            <div class="col-lg-12">
                <h1 class="text-center title_home my-4">Mes infos</h1>
            </div>
        </div>
        {# Bloc image #}
        <div class="row">
            <img src="{{asset('img/fond/hero_area_inscription.jpg')}}" class="img-fluid" alt="Banière mes infos">
        </div>
        {# Bloc navbar mes infos #}
        <div class="row">
            <div class="col-lg-12">
                <div class="row justify-content-center my-4">
                    <a href="{{ path('user_infos_situation') }}">
                        <img src="{{ asset('img/picto/picto_etapes_situation_bleu.svg') }}" width=" 60px" class="picto_mobile" alt="Picto mes infos">
                    </a>
                    <div class="ligne_bleu"></div>
                    <a href="{{ path('user_infos_physique') }}">
                        <img src="{{ asset('img/picto/picto_etapes_physique_bleu.svg') }}" width=" 60px" class="picto_mobile" alt="Picto mes infos">
                    </a>
                    <div class="ligne_bleu"></div>
                    <a href="{{ path('user_infos_personnalite') }}">
                        <img src="{{ asset('img/picto/picto_etapes_perso_orange.svg') }}" width=" 60px" class="picto_mobile" alt="Picto mes infos">
                    </a>
                    <div class="ligne_bleu"></div>
                    <a href="{{ path('user_infos_passion') }}">
                        <img src="{{ asset('img/picto/picto_etapes_passion_bleu.svg') }}" width=" 60px" class="picto_mobile" alt="Picto mes infos">
                    </a>
                    <div class="ligne_bleu"></div>
                    <a href="{{ path('user_infos_reglage') }}">
                        <img src="{{ asset('img/picto/picto_etapes_reglages_bleu.svg') }}" width=" 60px" class="picto_mobile" alt="Picto mes infos">
                    </a>
                </div>
            </div>
        </div>
        {# Message flash #}
        {% for msg in app.session.flashBag.get('success') %}
        <div class="row no-padding">
            <div class="col-lg-12 alert alert-secondary text-center alert-dismissible fade show mt-4" role="alert">
                {{ msg }}
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        </div>
        {% endfor %}
        {# Bloc formulaire #}
        <div class="row no-padding">
            <div class="col-lg-6 pb-4">
                <div class="bloc_user">
                    <p class="text-center py-2 paragraphe_inscription">Ma personnalité</p>
                </div>
                <div class="col-lg-7 col-md-7 my-4 mx-auto">
                    {{ form_start(form)}}
                    <div class="form-group">
                        {{ form_label(form.monNiveauEtude, "Mon niveau d'étude") }}
                        {{ form_widget(form.monNiveauEtude, { 'attr': { 'class': 'custom-select' } }) }}
                        {{ form_errors(form.monNiveauEtude) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.monJob, 'Mon job') }}
                        {{ form_widget(form.monJob, { 'attr': { 'class': 'form-control' } }) }}
                        {{ form_errors(form.monJob) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.monCaractere, 'Mon caractère (5 choix maximum)') }}
                        {{ form_widget(form.monCaractere, { 'attr': { 'class': 'custom-select' } }) }}
                        {{ form_errors(form.monCaractere) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.mesConvictionsSpirituelles, 'Mes convictions spirituelles') }}
                        {{ form_widget(form.mesConvictionsSpirituelles, { 'attr': { 'class': 'custom-select' } }) }}
                        {{ form_errors(form.mesConvictionsSpirituelles) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.mesPetitesAddictions, 'Mes petites addictions') }}
                        {{ form_widget(form.mesPetitesAddictions, { 'attr': { 'class': 'custom-select' } }) }}
                        {{ form_errors(form.mesPetitesAddictions) }}
                    </div>
                </div>
            </div>
            <div class="col-lg-6 pb-4"  style="background-color: #e8e3ef">
                <div class="bloc_recherche">
                    <p class="text-center py-2 paragraphe_inscription">Sa personnalité</p>
                </div>
                <div class="col-lg-7 col-md-7 my-4 mx-auto">
                    {{ form_start(form)}}
                    <div class="form-group">
                        {{ form_label(form.sonNiveauEtude, "Son niveau d'étude") }}
                        {{ form_widget(form.sonNiveauEtude, { 'attr': { 'class': 'custom-select' } }) }}
                        {{ form_errors(form.sonNiveauEtude) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.sonCaractere, 'Son caractère (5 choix maximum)') }}
                        {{ form_widget(form.sonCaractere, { 'attr': { 'class': 'custom-select' } }) }}
                        {{ form_errors(form.sonCaractere) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.sesConvictionsSpirituelles, 'Ses convictions spirituelles') }}
                        {{ form_widget(form.sesConvictionsSpirituelles, { 'attr': { 'class': 'custom-select' } }) }}
                        {{ form_errors(form.sesConvictionsSpirituelles) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.sesPetitesAddictions, 'Ses petites addictions') }}
                        {{ form_widget(form.sesPetitesAddictions, { 'attr': { 'class': 'custom-select' } }) }}
                        {{ form_errors(form.sesPetitesAddictions) }}
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-warning btn-block py-3 bloc_btn">Hop, je met à jour cette page :)</button>
            {{ form_end(form) }}
        </div>

        {# Navbar mobile #}
        <div class="mt-5 navbar_mobile">
            {% if app.user %}
            {% include('user/navbar_mobile.html.twig') %}
            {% endif %}
        </div>
    </div>
</div>

{% endblock %}