{% extends 'base.html.twig' %}

{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('css/registration.css') }}">
{% endblock %}

{% block body %}

<div class="container-fluid">
    {# Bloc logo Sheepi #}
    <div class="row justify-content-center">
        <img src="{{asset('img/picto/logo_sheepi.png')}}" class="img-fluid my-4" alt="Logo Sheepi">
    </div>
    {# Bloc image #}
    <div class="row">
        <img src="{{asset('img/fond/hero_area_inscription.jpg')}}" class="img-fluid" alt="Banière inscription">
    </div>
    {# Bloc étapier #}
    <div class="row">
        <div class="col-lg-12">
            <h5 class="my-4 text-center titre_inscription ">... Et les points communs confirment !</h5>
            <div class="row justify-content-center mb-4">
                <img src="{{ asset('img/picto/picto_etapes_situation_orange.svg') }}" width=" 60px" class="picto_etapier" alt="Image étapier">
                <div class="ligne_orange"></div>
                <img src="{{ asset('img/picto/picto_etapes_physique_orange.svg') }}" width=" 60px" class="picto_etapier" alt="Image étapier">
                <div class="ligne_orange"></div>
                <img src="{{ asset('img/picto/picto_etapes_perso_orange.svg') }}" width=" 60px" class="picto_etapier" alt="Image étapier">
                <div class="ligne_orange"></div>
                <img src="{{ asset('img/picto/picto_etapes_passion_orange.svg') }}" width=" 60px" class="picto_etapier" alt="Image étapier">
                <div class="ligne_orange"></div>
                <img src="{{ asset('img/picto/picto_etapes_reglages_bleu.svg') }}" width=" 60px" class="picto_etapier" alt="Image étapier">
            </div>
        </div>
    </div>
    {# Bloc formulaire #}
    <div class="row no-padding">
        <div class="col-lg-6 pb-4">
            <div class="bloc_user">
                <p class="text-center py-2 paragraphe_inscription">Mes passions</p>
            </div>
            <div class="col-lg-7 col-md-7 my-4 mx-auto">
                {{ form_start(form)}}
                <div class="form-group">
                    {{ form_label(form.mesActivitesSportives, "Mes activités sportives (5 choix maximum)") }}
                    {{ form_widget(form.mesActivitesSportives, { 'attr': { 'class': 'custom-select' } }) }}
                    {{ form_errors(form.mesActivitesSportives) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.mesActivitesNaturelles, 'Mes activités naturelles (5 choix maximum)') }}
                    {{ form_widget(form.mesActivitesNaturelles, { 'attr': { 'class': 'custom-select' } }) }}
                    {{ form_errors(form.mesActivitesNaturelles) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.mesActivitesArtistiques, 'Mes activités artistiques (5 choix maximum)') }}
                    {{ form_widget(form.mesActivitesArtistiques, { 'attr': { 'class': 'custom-select' } }) }}
                    {{ form_errors(form.mesActivitesArtistiques) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.mesActivitesCerebrales, 'Mes activités cérébrales (5 choix maximum)') }}
                    {{ form_widget(form.mesActivitesCerebrales, { 'attr': { 'class': 'custom-select' } }) }}
                    {{ form_errors(form.mesActivitesCerebrales) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.mesDivertissements, 'Mes divertissements (5 choix maximum)') }}
                    {{ form_widget(form.mesDivertissements, { 'attr': { 'class': 'custom-select' } }) }}
                    {{ form_errors(form.mesDivertissements) }}
                </div>
            </div>
        </div>
        <div class="col-lg-6 pb-4" style="background-color: #e8e3ef">
            <div class="bloc_recherche">
                <p class="text-center py-2 paragraphe_inscription">Ses passions</p>
            </div>
            <div class="col-lg-7 col-md-7 my-4 mx-auto">
                {{ form_start(form)}}
                <div class="form-group">
                    {{ form_label(form.sesActivitesSportives, "Ses activités sportives (5 choix maximum)") }}
                    {{ form_widget(form.sesActivitesSportives, { 'attr': { 'class': 'custom-select' } }) }}
                    {{ form_errors(form.sesActivitesSportives) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.sesActivitesNaturelles, 'Ses activités naturelles (5 choix maximum)') }}
                    {{ form_widget(form.sesActivitesNaturelles, { 'attr': { 'class': 'custom-select' } }) }}
                    {{ form_errors(form.sesActivitesNaturelles) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.sesActivitesArtistiques, 'Ses activités artistiques (5 choix maximum)') }}
                    {{ form_widget(form.sesActivitesArtistiques, { 'attr': { 'class': 'custom-select' } }) }}
                    {{ form_errors(form.sesActivitesArtistiques) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.sesActivitesCerebrales, 'Ses activités cérébrales (5 choix maximum)') }}
                    {{ form_widget(form.sesActivitesCerebrales, { 'attr': { 'class': 'custom-select' } }) }}
                    {{ form_errors(form.sesActivitesCerebrales) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.sesDivertissements, 'Ses divertissements (5 choix maximum)') }}
                    {{ form_widget(form.sesDivertissements, { 'attr': { 'class': 'custom-select' } }) }}
                    {{ form_errors(form.sesDivertissements) }}
                </div>
            </div>
        </div>
        <button type="submit" class="btn btn-warning btn-block py-3 bloc_btn">Je passe à la suite :)</button>
        {{ form_end(form) }}
    </div>
</div>

{% endblock %}